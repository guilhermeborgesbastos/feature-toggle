{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": ["airbnb", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "require-jsdoc": "off",
    "new-cap": ["error", { "capIsNewExceptions": ["Component", "NgModule", "Injectable"] }],
    "prettier/prettier": ["warning"]
  }
}
