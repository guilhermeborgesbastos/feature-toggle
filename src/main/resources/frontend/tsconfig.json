{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@app/*": ["src/app/*"],
      "@environments/*": ["src/environments/*"],
      "@services/*": ["src/app/_services/*"],
      "@helpers/*": ["src/app/_helpers/*"],
      "@shared/*": ["src/app/_shared/*"],
      "@models/*": ["src/app/_shared/models/*"],
      "@pipes/*": ["src/app/_shared/pipes/*"],
      "@common-components/*": ["src/app/_shared/components/*"],
      "@guards/*": ["src/app/_guards/*"],
      "@intereceptors/*": ["src/app/_interceptors/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
